<h1>
    <%= genre.name %>
</h1>

<a href="<%= genresPath %>">Back to all genres</a>
<a href="<%= editGenrePath %>">Edit</a>
<form action="<%= destroyGenrePath %>" method="post">
    <input type="hidden" name="_method" value="delete" />
    <input type="submit" value="Destroy" />
</form>

<div class="cards-container">
    <% books.forEach((book) => { %>
    <a class="card-book" href="<%= buildBookPath(book) %>">
        <img src="<%= book.imageUrl %>" alt="<%= book.title %>">
        <div class="shadow">
            <p class="title">
                <%= book.title %>
            </p>
            <p class="author">
                <%= book.author.name %>
            </p>
        </div>
    </a>
    <% }) %>
</div>

<% if (page > 1) { %>
<a href="<%= previousPagePath %>">Previous</a>
<% } %>
<p>Page
    <%= page %>
</p>
<a href="<%= nextPagePath %>">Next</a>
