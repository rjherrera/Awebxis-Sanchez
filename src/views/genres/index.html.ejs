<h1>Genres</h1>

<a href="<%= newGenrePath %>">New Genre</a>

<div class="cards-container">
  <% genres.forEach((genre) => { %>
  <a class="card-label" href="<%= buildGenrePath(genre) %>">
    <img src="<%= genre.books[0].imageUrl %>" alt="<%= genre.name %>">
    <div class="shadow">
      <p class="label"><%= genre.name %></p>
    </div>
  </a>
  <% }) %>
</div>

<% if (page > 1) { %>
<a href="<%= previousPagePath %>">Previous</a>
<% } %>
<p>Page <%= page %></p>
<a href="<%= nextPagePath %>">Next</a>
