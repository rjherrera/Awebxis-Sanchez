<!DOCTYPE html>
<html>

  <head>
    <meta charset="utf-8">
    <title>Cambalache</title>
    <% if (env !== 'development') { %>
      <link rel="stylesheet" href="<%= assetPath('app.css') %>">
    <% } %>
    <link rel="shortcut icon" type="image/png" href="<%= assetPath('favicon.png') %>">
    <link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Raleway" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
  </head>

  <body>
    <header>
      <a id="logo" href="/">
        <img src="<%= assetPath('logo.svg') %>" alt="Logo" />
      </a>
      <nav>
        <a href="/">Home</a>
        <a href="<%= booksPath %>">Books</a>
        <a href="<%= genresPath %>">Genres</a>
        <a href="<%= authorsPath %>">Authors</a>
        <a href="<%= usersPath %>">Users</a>
      </nav>
    </header>

    <% if (currentUser) { %>
      <span class="name">Hello, <%= currentUser.firstName %></span>
      <form action="<%= destroySessionPath %>" method="post">
        <input type="hidden" name="_method" value="delete" />
        <input type="submit" value="Salir" />
      </form>
    <% } else { %>
      <span class="name">Hello, Guest</span>
      <a href="<%= newUserPath %>">Sign up</a>
      <a href="<%= newSessionPath %>">Sign in</a>
    <% } %>
    
    <%- body %>
    <script src="<%= assetPath('app.js') %>"></script>
  </body>

</html>
