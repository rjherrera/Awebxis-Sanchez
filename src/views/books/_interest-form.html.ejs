<% if (interest) { %>
  <form action="<%= destroyInterestPath(interest) %>" method="post">
    <input type="hidden" name="_method" value="delete" />
    <input type="submit" class="button secondary" value="Don't want it" />
  </form>
<% } else { %>
  <form action="<%= newInterestPath %>" method="post">
    <input type="hidden" name="bookId" value="<%= book.id %>"/>
    <input type="submit" class="button secondary" value="Want it" />
  </form>
<% } %>


