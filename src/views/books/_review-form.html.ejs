<div>
    <form action="<%= submitReviewPath %>" method="post">
        <% if (locals.reviewErrors) { %>
            <p class="errors">Check the following errors:</p>
            <ul>
                <% Object.keys(reviewErrors).forEach(prop => { %>
                    <li><%= prop %>: <%= reviewErrors[prop].message %></li>
                <% }) %>
            </ul>
        <% } %>
        <!-- TODO: remove when session is implemented -->
        <input type="number" hidden="true" name="userId" value="1" />
        <div>
            <label for="rating">Rating</label>
            <input type="number" min="1" max="5" required="true" name="rating"/>
        </div>
        <div>
            <label for="comment">Comment</label>
            <textarea type="text" name="comment"></textarea>
        </div>
        <div>
            <input type="submit" name="create" value="Create" />
        </div>
    </form>
</div>
