<h1><%= user.firstName %></h1>

<table>
  <tr>
    <thead>
      <th>Username</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><%= user.username %></td>
      <td><%= user.email %></td>
    </tr>
  </tbody>
</table>

<%- include('show/_interests') %>

<% if (currentUser.id === user.id) { %>
  <%- include('show/_matches') %>
<% } %>

<%- include('show/_books') %>

<%- include('show/_follows', { collection: followers, title: 'Followers', name: 'Follower' }) %>

<%- include('show/_follows', { collection: following, title: 'Following', name: 'Following' }) %>

<%- include('show/_feedbacks') %>

<hr>

<a href="<%= usersPath %>">Back</a>
<% if (currentUserIsAdmin || currentUser.id === user.id) { %>
  <a href="<%= editUserPath %>">Edit</a>
<% } %>
