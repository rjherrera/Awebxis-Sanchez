<style>
  .flex-row {
    flex-direction: row;
    display: flex;
    /* flex-flow: row wrap; */
    margin-left: -5%;
    margin-right: -5%;
  }

  .flex-column {
    flex-direction: column;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-grow: 1;
    flex: 50%;
    padding: 15px;
  }

  .flex-column_full {
    flex-direction: column;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-grow: 1;
    flex: 100%;
    padding: 15px;
    margin-left: -5%;
    margin-right: -5%;
  }

  h5 {
    font-style: italic;
  }

  .interest-count {
    font-style: italic;
  }

  ul {
   list-style: none;
   line-height: 2.0;
  }

  .quadrant1 {
    background:rgba(0,0,0,0.05);
  }

  .quadrant2 {
    background:rgba(0,0,0,0.1);
  }

  .quadrant3 {
    background:rgba(0,0,0,0.2);
  }

  .quadrant4 {
    background:rgba(0,0,0,0.3);
  }

  .exchange {
    display: flex;
    align-content: center;
    justify-content: center;
  }

  .bolded {
    font-weight: bold;
    font-style: italic;
  }

  .flex-top {
    display: flex;
    align-items: center;
    justify-content: flex-start;
  }

</style>

<h1><%= user.firstName + " " + user.lastName %></h1>
<h5><%= followers.length %> followers and following <%= following.length %> people </h5>

<% const isAdminOrSelf = currentUserIsAdmin || currentUser.id === user.id %>


<% if (currentUser.id === user.id) { %>
  <div class="flex-row">
  
    <div class="flex-column quadrant1 flex-top">
        <h1>Pending matches:</h1>
      <%- include('show/_matches') %>
  </div>
    <div class="flex-column quadrant2 flex-top">
        <h1>Interest on user's books</h1>
        <%- include('show/_interests', { isAdminOrSelf }) %>
    </div>
  <% } %>
</div>

<div class="flex-row">
  <div class="flex-column quadrant3 flex-top" >
      <h1>Wants: <%= interests.length %> </h1>
    <%- include('show/_interests_cards', { isAdminOrSelf }) %>
  </div>
  <div class="flex-column quadrant4 flex-top">
    <h1>Owns: <%= userBooks.length %> </h1>
    <%- include('show/_books') %>
  </div>
</div>


<%- include('show/_feedbacks') %>

<% if (user.id === currentUser.id) { %>
  <form action='<%= editUserPath %>' class="flex-column_full">
    <input type="submit" class="button" value="User's info">
  </form>
<% } else { %>
  <form action='#' class="flex-column_full">
    <input type="submit" class="button" value="User's info">
  </form>
<% } %>