{
  "name": "Cambalache",
  "scripts": {
    "postdeploy": "./postdeploy.sh"
  },
  "env": {
    "GOODREADS_KEY": {
      "required": true
    },
    "SEEDS_SERVER": {
      "required": true
    },
    "AMAZON_ACCESS_KEY_ID": {
      "required": true
    },
    "AMAZON_SECRET_KEY": {
      "required": true
    },
    "AMAZON_REGION": {
      "required": true
    },
    "CONTAINER_NAME": "cambalache-staging"
  },
  "formation": {
    "web": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ]
}
